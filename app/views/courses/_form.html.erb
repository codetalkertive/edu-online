<%= form_with(model: course, local: true) do |form| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
        <% course.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.rich_text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :short_description %>
    <%= form.text_area :short_description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :language %>
    <%= form.select :language, options_for_select(["English", "French", "Italian"]), {:include_blank => '--Select One--'}, :required => true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :level %>
    <%= form.select :level, options_for_select(["Beginner", "Intermediate", "Advanced"]), {:include_blank => '--Select One--'}, :required =>true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.number_field :price, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit "Add a course", class: 'btn btn-primary' %>
  </div>
<% end %>