<div class="jumbotron">
	<h3>What Do You Want To Learn?</h3>

	<div class="form-inline my-2 my-lg-0 p-4">
        <%= form_tag(courses_path, method: :get) do %>
          <div class="input-group">
            <%= text_field_tag :search, params[:search], autocomplete: 'off', placeholder: "Find a course", class: 'form-control-sm' %>
            <span class="input-group-append">
              <button class="btn btn-primary btn-sm" type="submit">
                <span aria-hidden="true" class="fa fa-search"></span>
              </button>
            </span>
          </div>
        <% end %>
      </div>
</div>

<div class="card-group shadow">
  <div class="card">
    <div class="card-body">
      <h1>
        <div class="fa fa-graduation-cap"></div>
      </h1>
      
      <%= Course.count %>
     
      <!--online courses
      -->
      <div class="row"></div>
      <small>Explore a variety of fresh topics</small>
    </div>
  </div>
  <div class="card">
    <div class="card-body">
      <h1>
        <div class="fa fa-chalkboard-teacher"></div>
        <!--.fa.fa-brain
        -->
      </h1>
      <%= pluralize(Course.distinct.count(:user_id), 'expert instructors') %>
      <!--= Course.distinct.count(:user_id)
      -->
      <!--expert instructors
      -->
      <div class="row"></div>
      <small>Find the right instructor for you</small>
    </div>
  </div>
  <div class="card">
    <div class="card-body">
      <h1>
        <div class="fa fa-user-graduate"></div>
      </h1>
      <%= pluralize(User.count, 'active learners') %>
      <!--= User.count
      -->
      <!--active learners
      -->
      <div class="row"></div>
      <small>Join the knowledge sharing community</small>
    </div>
  </div>
  <div class="card">
    <div class="card-body">
      <h1>
        <div class="fa fa-infinity"></div>
      </h1>
      Lifetime access
      <div class="row"></div>
      <small>Learn on your schedule</small>
    </div>
  </div>
</div>
<p></p>


<hr>

<div class="popular-courses">

  <h2>Popular Courses</h2><hr>

   <div class="card-columns">
     <% @courses.each do |course| %>
       <%= render "courses/course", course: course %>
     <% end %>
    </div>
</div>


<div class="top-rated-courses">

  <h2>Top Rated Courses</h2><hr>

   <div class="card-columns">
     <% @courses.each do |course| %>
       <%= render "courses/course", course: course %>
     <% end %>
    </div>
</div>


<div class="latest-courses">

  <h2>Latest Courses</h2><hr>

   <div class="card-columns">
     <% @latest_courses.each do |course| %>
       <%= render "courses/course", course: course %>
     <% end %>
    </div>
</div>
